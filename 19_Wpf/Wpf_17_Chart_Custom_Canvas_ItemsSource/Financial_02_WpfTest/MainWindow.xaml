<Window x:Class="Financial_02_WpfTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Financial_02_WpfTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>
        <Button
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="4">
            
        </Button>
        <Canvas
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Name="chart_canvas"
            Width="{Binding ChartCanvasWidth, Mode=TwoWay}"
            Height="{Binding ChartCanvasHeight, Mode=TwoWay}">
        </Canvas>
    </Grid>
</Window>
