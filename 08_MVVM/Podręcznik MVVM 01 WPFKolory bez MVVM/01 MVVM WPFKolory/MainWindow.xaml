<Window x:Class="_01_MVVM_WPFKolory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01_MVVM_WPFKolory"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" KeyDown="Window_KeyDown" Closed="Window_Closed">
    <Grid>
        <Rectangle x:Name="rectangle" Fill="#FFF4F4F5" Margin="10,10,10,91" Stroke="Black"/>
        <Slider x:Name="sliderR" Margin="10,0,10,64" Height="22"
        VerticalAlignment="Bottom" ValueChanged="sliderR_ValueChanged" Maximum="255"/>
        <Slider x:Name="sliderG" Margin="10,0,10,37" Height="22"
        VerticalAlignment="Bottom" ValueChanged="sliderR_ValueChanged" Maximum="255"/>
        <Slider x:Name="sliderB" Margin="10,0,10,10" Height="22"
        VerticalAlignment="Bottom" ValueChanged="sliderR_ValueChanged" Maximum="255"/>
    </Grid>
</Window>
